<script>
  document.addEventListener("DOMContentLoaded", function () {
    function initFancybox() {
      $("[data-fancybox='gallery']").fancybox({
        loop: true,
        arrows: true,
        infobar: true,
        buttons: ["zoom", "slideShow", "fullScreen", "thumbs", "close"],
        animationEffect: "fade",
        keyboard: true,
        toolbar: true,
        hash: false, // ðŸ”¹ Prevents URL change
        backFocus: false,
        protect: true
      });

      // Prevent default action (redirect) when Fancybox is active
      $("[data-fancybox]").on("click", function (e) {
        e.preventDefault();
      });
    }

    // Initialize Fancybox
    initFancybox();

    // Fix for Shopify Customizer and dynamic reloading
    $(document).on("shopify:section:load shopify:section:reorder", function () {
      initFancybox();
    });
  });
</script>



