//Inside the section create a custom-gallery

{% schema %}
{
  "name": "Custom Gallery",
  "settings": [],
  "blocks": [
    {
      "type": "image",
      "name": "Gallery Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Select Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Gallery",
      "category": "Image"
    }
  ]
}
{% endschema %}

<div class="custom-gallery">
  {% for block in section.blocks %}
    {% if block.settings.image != blank %}
      <a 
        data-fancybox="gallery"
        data-type="image"
        data-src="{{ block.settings.image | img_url: 'master' }}"
        
        {% if request.design_mode %}onclick="return false;"{% endif %}
      >
        <img src="{{ block.settings.image | img_url: 'large' }}" alt="Gallery Image" />
      </a>
    {% endif %}
  {% endfor %}
</div>


<style>
  .custom-gallery {
    display: grid;
    grid-template-columns: repeat(4, 1fr); /* 4 columns per row */
    gap: 20px; /* Space between images */
  }
  .custom-gallery a {
    display: block;
  }
  .custom-gallery img {
    width: 100%;
    height: 250px; /* ðŸ”¹ Fixed height for uniformity */
    object-fit: cover; /* ðŸ”¹ Ensures images fit without distortion */
    border-radius: 5px;
    transition: transform 0.3s ease;
    cursor: pointer;
  }
  .custom-gallery img:hover {
    transform: scale(1.05);
  }

  /* Responsive Design for Mobile */
  @media (max-width: 1024px) {
    .custom-gallery {
      grid-template-columns: repeat(3, 1fr); /* 3 columns for tablets */
    }
  }

  @media (max-width: 768px) {
    .custom-gallery {
      grid-template-columns: repeat(2, 1fr); /* 2 columns for mobile */
    }
  }

  @media (max-width: 480px) {
    .custom-gallery {
      grid-template-columns: repeat(1, 1fr); /* 1 column for small screens */
    }
  }
</style>

